<h3> Name: <%= @box.name %> ; Id: <%= @box.id %> </h3>
	<%if current_user?(@user) %>
	<%= link_to "edit", edit_box_path(@box)%>
	<%else%>
	<h4>Author: <%= @user.name %> </h4>
	<%= render 'follow_box_form', box: @box if @box.id != nil%>
	<a href="<%= @box.id %>/followers"><%= UserBoxFollow.find_all_by_box_id(@box.id).count %> followers</a>
	<%end%>

<hr/>
<hr/> 
<% @photos.each do |photo| %>
	<% if photo.image_remote_url.nil? %>
		<%= image_tag photo.image.url(:small)%>
	<% else %>
		<%= render 'pictures/action_form_picture' %>
		<%= image_tag photo.source, size: "150x150"%>
	<% end %>
<% end %>