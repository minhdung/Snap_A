<h2> Show boxes | <%=@user.name %> </h2>

<% if current_user?(@user) %>
  <h3> Boxes of signed user </h3>
  <% @boxes.each do | box | %>
    <div id="box_frame">
      <%= box.name %>
      <%= link_to "edit", edit_box_path(box), data: { confirm: "You sure?" } %>
    </div>
  <% end %>
  <%= render 'new_box_form'%>

<% else %>
  <h3> Boxes of the other user </h3>

  <%= render 'follow_user_form' %>

  <% @boxes.each do | box | %>
    <div id="box_frame">
      <h4> <%= box.name %> id = <%= box.id %></h4>

      <%= render 'follow_box_form', box: box if box.id != nil%>

    </div>
  <% end %>

<% end %>
